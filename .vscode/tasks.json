{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Debug",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
				"-g",
				"-c",
				"${workspaceFolder}/src/*.cc",
				"-I",
				"${workspaceFolder}/include",
				"&&",
				"g++",
				"*.o",
				"-o",
				"pewpew",
				"-lsfml-graphics",
				"-lsfml-window",
				"-lsfml-system",
				"-lsfml-audio",
				"-I",
				"${workspaceFolder}/include",
            ],
            "options": {
                "cwd": "${workspaceFolder}/bin/debug"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}